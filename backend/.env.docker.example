APP_NAME="Meo Mai Moi"
APP_ENV=production
APP_KEY=
APP_DEBUG=true

# Base application URL. Use https:// in production to force secure links.
APP_URL=http://localhost:8000
# Where the SPA/frontend is served in local Docker dev
FRONTEND_URL=http://localhost:8000
# In case you want to run frontend via `npm run dev` with Vite
# FRONTEND_URL=http://localhost:5173

SEED_ADMIN_EMAIL=admin@catarchy.space
SEED_ADMIN_PASSWORD=password
SEED_ADMIN_NAME="Super Admin"

SANCTUM_STATEFUL_DOMAINS=dev.meo-mai-moi.com,dev.meo-mai-moi.com:443
SESSION_DOMAIN=.meo-mai-moi.com
SESSION_SECURE_COOKIE=true

# Block indexing on non-production/dev environments. When true, middleware adds
# X-Robots-Tag: noindex, nofollow to all responses. Recommended for dev/staging.
DISALLOW_ROBOTS=true

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

TELEGRAM_BOT_TOKEN=none
CHAT_ID=your-chat-id-here

# Docker-specific Database Connection
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=meo_mai_moi
DB_USERNAME=user
DB_PASSWORD=password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun Configuration
MAILGUN_DOMAIN=dev.meo-mai-moi.com
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net
MAILGUN_WEBHOOK_SIGNING_KEY=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
