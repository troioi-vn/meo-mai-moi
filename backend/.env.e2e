# E2E Testing Environment - Laravel Configuration
APP_ENV=testing
APP_DEBUG=true

# Database
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=meo_mai_moi_testing
DB_USERNAME=user
DB_PASSWORD=password

# Mail Configuration for E2E Tests
# Note: Email settings are managed via EmailConfiguration model in database
# These .env values serve as fallbacks only - database config takes precedence
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=test@meomaimoi.local
MAIL_FROM_NAME="Meo Mai Moi Test"

# Email verification required for testing
EMAIL_VERIFICATION_REQUIRED=true

# Queue - use sync for immediate processing in tests
QUEUE_CONNECTION=sync