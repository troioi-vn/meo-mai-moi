APP_NAME="Meo Mai Moi"
APP_ENV=production
APP_KEY=
APP_DEBUG=true

# Base application URL. Use https:// in production to force secure links.
APP_URL=http://localhost:8000

# The frontend URL is used for generating links in emails, etc.
# Default is for the Docker setup where the app is served from the backend's port.
FRONTEND_URL=http://localhost:8000
# Uncomment the line below if you are running the frontend via `npm run dev`
# FRONTEND_URL=http://localhost:5173

SEED_ADMIN_EMAIL=admin@catarchy.space
SEED_ADMIN_PASSWORD=password
SEED_ADMIN_NAME="Super Admin"

# Domains that are allowed to make stateful API requests (e.g., login).
# Add your production domain and local dev domains.
# `localhost:8000` is for the Docker setup.
# `localhost:5173` is for the `npm run dev` Vite server.
SANCTUM_STATEFUL_DOMAINS=localhost:8000,localhost:5173,dev.meo-mai-moi.com
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=false

# Block indexing on non-production/dev environments. When true, middleware adds
# X-Robots-Tag: noindex, nofollow to all responses. Recommended for dev/staging.
DISALLOW_ROBOTS=true

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Web Push (VAPID) configuration
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
# Defaults to APP_URL if left blank; can be a `mailto:` or `https://` identifier
VAPID_SUBJECT=${APP_URL}
APP_PUSH_ICON="/icon-192.png"
APP_PUSH_BADGE="/icon-32.png"

# Docker-specific Database Connection
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=meo_mai_moi
DB_USERNAME=user
DB_PASSWORD=password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
# Use 'database' for production to enable async job processing via queue:work
# Use 'sync' for local dev if you want immediate execution without queue worker
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun Configuration
MAILGUN_DOMAIN=dev.meo-mai-moi.com
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net
MAILGUN_WEBHOOK_SIGNING_KEY=

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# In-app deployment notifications for superadmin
NOTIFY_SUPERADMIN_ON_DEPLOY=false

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://dev.meo-mai-moi.com/auth/google/callback
