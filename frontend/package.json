  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run blade:update && npm run assets:copy",
    "build:docker": "vite build && npm run blade:update && npm run assets:copy",
    "assets:copy": "node ./scripts/copy-assets.cjs",
    "blade:update": "node ./scripts/update-blade.cjs",
    "lint": "eslint . --cache",
    "lint:deps": "depcruise src --config .dependency-cruiser.cjs",
    "lint:dead": "ts-prune --project tsconfig.app.json",
    "test": "vitest run",
    "test:silent": "vitest run --reporter=dot --silent",
    "test:minimal": "vitest run --reporter=dot --silent --no-coverage",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "test:backend": "cd ../backend && php artisan test --parallel",
    "e2e": "./scripts/e2e-test.sh",
    "e2e:direct": "playwright test",
    "e2e:ui": "SKIP_E2E_SETUP=true playwright test --ui",
    "e2e:report": "playwright show-report",
